{
  "name": "loliful-api",
  "version": "1.0.0",
  "main": "server/server.js",
  "engines": {
    "node": ">=6.0.0"
  },
  "scripts": {
    "start": "nodemon -e js,jade,json --ignore client/ --ignore frontend --ignore node_modules server/server.js",
    "pretest": "jshint .",
    "test": "NODE_ENV=testing mocha --recursive -R spec",
    "test-coverage": "NODE_ENV=testing ./node_modules/istanbul/lib/cli.js cover ./node_modules/mocha/bin/_mocha -- --recursive -R spec",
    "jscs": "jscs server/server.js",
    "build:lb-services": "./node_modules/loopback-sdk-angular-cli/bin/lb-ng server/server.js ../loliful-app/src/app/components/api/lb.services.js",
    "build": "npm run build:lb-services && cd frontend && gulp --env=prod config && gulp build",
    "build:staging": "npm run build:lb-services && cd frontend && gulp --env=staging config && gulp build",
    "serve-public": "cd public && browser-sync start --server --files '**/*.css, *.html, **/*.js'",
    "deploy-dev-lp": "aws s3 cp --recursive . s3://dev.loliful.io --profile=loliful --acl=public-read"
  },
  "dependencies": {
    "async": "^2.0.1",
    "aws-sdk": "^2.5.3",
    "body-parser": "^1.15.2",
    "brfs": "^1.4.3",
    "browser-sync": "^2.14.0",
    "co": "^4.6.0",
    "compression": "^1.6.2",
    "connect-ensure-login": "^0.1.1",
    "connect-redis": "^3.1.0",
    "cookie-parser": "^1.4.3",
    "cors": "^2.8.0",
    "debug": "^2.2.0",
    "errorhandler": "^1.4.3",
    "escape-html": "^1.0.3",
    "express-flash": "0.0.2",
    "express-session": "^1.14.1",
    "file-stream-rotator": "0.0.7",
    "istanbul": "^0.4.5",
    "jade": "1.11.0",
    "lodash": "4.15.0",
    "loopback": "2.31.0",
    "loopback-boot": "2.21.0",
    "loopback-component-explorer": "^2.7.0",
    "loopback-component-passport": "2.1.0",
    "loopback-connector-mongodb": "^1.15.2",
    "loopback-connector-mysql": "^2.3.0",
    "loopback-connector-redis": "0.0.3",
    "loopback-context": "^1.0.0",
    "loopback-datasource-juggler": "2.50.0",
    "mailgen": "^1.0.25",
    "media-typer": "0.3.0",
    "mime-types": "2.1.11",
    "moment": "2.14.1",
    "morgan": "1.7.0",
    "nodemailer-mailgun-transport": "1.2.2",
    "passport": "0.3.2",
    "passport-facebook": "2.1.1",
    "passport-google-oauth": "1.0.0",
    "passport-local": "1.0.0",
    "passport-oauth2": "1.3.0",
    "passport-twitter": "1.0.4",
    "phantomjs-prebuilt": "^2.1.12",
    "redis": "2.6.2",
    "request": "2.74.0",
    "slack-notify": "^0.1.6",
    "socket.io": "1.4.8",
    "socketio-auth": "0.0.5"
  },
  "optionalDependencies": {
    "loopback-component-explorer": "^2.5.0"
  },
  "devDependencies": {
    "angular-resource": "1.5.8",
    "browser-sync": "^2.13.0",
    "faker": "3.1.0",
    "istanbul": "^0.4.4",
    "jscs": "3.0.7",
    "jsdoc": "3.4.0",
    "jshint": "2.9.3",
    "loopback-sdk-angular-cli": "2.0.1",
    "loopback-testing": "1.3.0",
    "mocha": "3.0.2",
    "nodemailer-stub-transport": "1.1.0",
    "redis-mock": "0.11.0",
    "should": "11.1.0",
    "supertest": "2.0.0",
    "uglifycss": "0.0.21"
  },
  "repository": {
    "type": "",
    "url": ""
  },
  "description": "Loliful API",
  "bundleDependencies": [
    "compression",
    "cors",
    "errorhandler",
    "loopback",
    "loopback-boot",
    "loopback-connector-mongodb",
    "loopback-datasource-juggler",
    "loopback-component-explorer"
  ]
}
